@model ApiServer.ViewModels.LoginViewModel
<div class="container py-5 py-sm-7">
    <a class="d-flex justify-content-center mb-5" href="/">
    </a>

    <div class="row justify-content-center">
        <div class="col-md-7 col-lg-5">
            <!-- Card -->
            <div class="card card-lg mb-5">
                <div class="card-body">
                    <!-- Form -->
                    <form autocomplete="off" asp-route="Account/Login">
                        <input type="hidden" asp-for="ReturnUrl" />
                        <div class="text-center">
                            <div class="mb-5">
                                <h1 class="display-4">Sign in</h1>
                            </div>
                        </div>
                        <div class="form-group">
                            <label asp-for="Username" class="input-label" autofocus>Username</label>
                            <input type="text" asp-for="Username" class="form-control form-control-lg" placeholder="Username">
                            <span asp-validation-for="Username" class="text-danger small"></span>
                        </div>
                        <div class="form-group">
                            <label asp-for="Password" class="input-label">Password</label>
                            <div class="input-group input-group-merge">
                                <input type="password" asp-for="Password" class="js-toggle-password form-control form-control-lg" placeholder="Password">
                                <a class="input-group-append js-password-toggle-target" href="javascript:;">
                                    <span class="input-group-text">
                                        <i id="changePassIcon"></i>
                                    </span>
                                </a>
                            </div>
                            <span asp-validation-for="Password" class="text-danger small"></span>
                        </div>
                        
                        <button type="submit" class="btn btn-lg btn-block btn-primary">Login</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section pageScripts
{
    <partial name="_ValidationScriptsPartial" />
}